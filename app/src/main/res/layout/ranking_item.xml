<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_marginVertical="@dimen/main_margin_2x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgRankingAvatar"
                android:layout_width="@dimen/player_selection_item_imgAvatar_size"
                android:layout_height="@dimen/player_selection_item_imgAvatar_size"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/avatar_01_mexican" />

            <TextView
                android:id="@+id/lblRankingNickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                app:layout_constraintStart_toEndOf="@+id/imgRankingAvatar"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblRankingGamemode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ranking_item_gameMode"
                app:layout_constraintStart_toEndOf="@+id/imgRankingAvatar"
                app:layout_constraintTop_toBottomOf="@+id/lblRankingNickname" />

            <TextView
                android:id="@+id/lblRankingMinutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ranking_item_time"
                app:layout_constraintStart_toEndOf="@+id/imgRankingAvatar"
                app:layout_constraintTop_toBottomOf="@+id/lblRankingGamemode" />

            <TextView
                android:id="@+id/lblRankingWords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ranking_item_words"
                app:layout_constraintStart_toStartOf="@+id/lblRankingMinutes"
                app:layout_constraintTop_toBottomOf="@+id/lblRankingMinutes" />

            <TextView
                android:id="@+id/lblRankingCorrectAnswers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ranking_item_correct"
                app:layout_constraintStart_toStartOf="@+id/lblRankingMinutes"
                app:layout_constraintTop_toBottomOf="@+id/lblRankingWords" />

            <TextView
                android:id="@+id/lblRankingPointsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/game_points"
                app:layout_constraintBottom_toTopOf="@+id/lblRankingPoints"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lblRankingPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/totalPoints"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lblRankingPointsTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>